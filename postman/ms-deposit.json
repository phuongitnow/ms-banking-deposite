{
  "info": {
    "name": "ms-banking-deposit (MVP) - E2E",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection test qua Kong với scripts tự động lưu ID và chuỗi E2E"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "connectUrl", "value": "http://localhost:18083" },
    { "key": "customerId", "value": "00000000-0000-0000-0000-000000000001" },
    { "key": "productId", "value": "" },
    { "key": "depositId", "value": "" }
  ],
  "item": [
    {
      "name": "1. Create Product",
      "event": [
        {
          "listen": "prerequest",
          "script": { "type": "text/javascript", "exec": [
            "pm.variables.set('prodName', 'Term-6M');"
          ] }
        },
        {
          "listen": "test",
          "script": { "type": "text/javascript", "exec": [
            "pm.test('Status 200/201', function(){ pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
            "let json={}; try{ json=pm.response.json(); }catch(e){}",
            "pm.collectionVariables.set('productId', json.id || json.productId || '');",
            "pm.test('productId saved', function(){ pm.expect(pm.collectionVariables.get('productId')).to.have.length(36); });",
            "postman.setNextRequest('2. Get Rates');"
          ] }
        }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": "{{baseUrl}}/api/products",
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"{{prodName}}\",\n  \"minAmount\": 1000000,\n  \"maxAmount\": 500000000,\n  \"termInMonths\": 6,\n  \"ratePercent\": 5.5\n}" }
      }
    },
    {
      "name": "2. Get Rates",
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": [
          "pm.test('Status 200', function(){ pm.response.to.have.status(200); });",
          "postman.setNextRequest('3. Create Deposit Request');"
        ] } }
      ],
      "request": { "method": "GET", "url": "{{baseUrl}}/api/rates?term=6&amount=100000000&productId={{productId}}" }
    },
    {
      "name": "3. Create Deposit Request",
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": [
          "pm.test('Status 200/201', function(){ pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
          "let json={}; try{ json=pm.response.json(); }catch(e){}",
          "pm.collectionVariables.set('depositId', json.id || json.depositId || '');",
          "pm.test('depositId saved', function(){ pm.expect(pm.collectionVariables.get('depositId')).to.have.length(36); });",
          "postman.setNextRequest('4. Approve Deposit');"
        ] } }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": "{{baseUrl}}/api/deposits",
        "body": { "mode": "raw", "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"customerId\": \"{{customerId}}\",\n  \"amount\": 10000000\n}" }
      }
    },
    {
      "name": "4. Approve Deposit",
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": [
          "pm.test('Status 200/202', function(){ pm.expect(pm.response.code).to.be.oneOf([200,202]); });",
          "postman.setNextRequest('5. Get Account');"
        ] } }
      ],
      "request": { "method": "POST", "url": "{{baseUrl}}/api/deposits/{{depositId}}/approve" }
    },
    {
      "name": "5. Get Account",
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": [
          "pm.test('Status 200', function(){ pm.response.to.have.status(200); });",
          "postman.setNextRequest('6. Get Account Deposits');"
        ] } }
      ],
      "request": { "method": "GET", "url": "{{baseUrl}}/api/accounts/{{customerId}}" }
    },
    {
      "name": "6. Get Account Deposits",
      "event": [
        { "listen": "test", "script": { "type": "text/javascript", "exec": [
          "pm.test('Status 200', function(){ pm.response.to.have.status(200); });",
          "postman.setNextRequest(null);"
        ] } }
      ],
      "request": { "method": "GET", "url": "{{baseUrl}}/api/accounts/{{customerId}}/deposits" }
    },
    {
      "name": "7. Notify Test",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": "{{baseUrl}}/api/notifications/test",
        "body": { "mode": "raw", "raw": "{\"to\":\"user@example.com\",\"subject\":\"Hello\",\"body\":\"Hi\"}" }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [
        "pm.test('Status 200/202', function(){ pm.expect(pm.response.code).to.be.oneOf([200,202]); });"
      ] } } ]
    },
    {
      "name": "8. Connect: List Connectors",
      "request": { "method": "GET", "url": "{{connectUrl}}/connectors" },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [
        "pm.test('Status 200', function(){ pm.response.to.have.status(200); });"
      ] } } ]
    }
  ]
}
